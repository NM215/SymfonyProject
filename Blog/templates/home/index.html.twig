{% extends 'base.html.twig' %}

{% block title %}Blog Home{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for post in posts %}
                <div class="col-md-4">
                    <div class="card">
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <footer class="blockquote-footer">Someone famous in <cite title="Source Title">{{ post.author }}</cite></footer>
                            <p class="card-text">{{ post.content }}</p>
                            <p>{{ post.createdAt |date("d/m/Y") }}</p>
                            <a href="/posts/{{ post.id }}" class="btn btn-primary">Lire</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
