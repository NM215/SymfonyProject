{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="col-md-12" style="margin-top: 1em;">

        <h1>Post</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Author (Slug)</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('post_index') }}">Back to list</a>

        <a class="btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">Edit</a>

        <div style="margin-top: 2em;">
            <p>Delete the post : </p> {{ include('post/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
