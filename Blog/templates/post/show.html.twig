{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Author (Slug)</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('post_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    <div style="margin-top: 2em;">
        <p>Supprimer le post : </p> {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
